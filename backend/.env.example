# Suraksha Backend Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/suraksha

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# External API Keys
OPENWEATHER_API_KEY=your_openweather_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@suraksha.edu

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Application Settings
APP_NAME=Suraksha Backend
APP_VERSION=1.0.0
DEBUG=True
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:8081"]

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads/

# WebSocket Settings
WEBSOCKET_HEARTBEAT_INTERVAL=30

# Celery (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2